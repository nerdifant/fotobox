{
  "display":{
    "window_name": "FotoBox",
    "fullscreen": true,
    "window_size": [800,600],
    "hide_mouse": true,
    "background": "/home/pi/git/fotobox/img/background/lens.png"
  },
  "camera": {

  },
  "pictures": {
    "save_dir": "/home/pi/fotobox",
    "basename": "%Y-%m-%d/pic",
    "suffix": ".jpg",
    "count_width": 5,
    "take": {
      "time_countdown": 3,
      "time_show_image": 10
    },
    "slideshow": {
      "enabled": false,
      "time_show_image": 5
    }

  },
  "gpio": {
    "input_channels": {
      "shutdown": 16
    },
    "output_channels":{
    }
  },
  "messages": {
    "interact": "Press left mouse button!",
    "no_camera": "No Camera detected! Press S to search."
  },
  "seafile-servers": [{
      "url": "https://cloud.seafile.com",
      "auth": {
        "username": "fotobox@cloud.seafile.com",
        "password": "secret"
      },
      "repo": "FotoBox",
      "shared_link_expire": 2,
      "shared_link_password": false
    }]
}
